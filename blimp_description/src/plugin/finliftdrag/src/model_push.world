<?xml version="1.0"?> 
<sdf version="1.4">
  <world name="default">
    <physics type="ode">
      <gravity>0.0 0.0 -9.8</gravity>
    </physics>

    <!-- Ground Plane -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <include>
      <uri>model://sun</uri>
    </include>
 
    <model name="box">
      <pose>0 0 0 0 0 0</pose>
      <static>false</static>
      <enable_wind>true</enable_wind>
      <self_collide>true</self_collide>
      <link name="roof">
        <kinematic>true</kinematic>
        <pose>0 0 1 0 0 0</pose>
        <collision name="collision">
          <geometry>
            <box>
              <size>1 1 0.1</size>
            </box>
          </geometry>
         <surface>
            <friction>
              <ode>
               <mu>0.1</mu>
                <mu2>0</mu2>
              </ode>
            </friction>
          </surface>
       </collision>
        <visual name="visual">
          <transparency>0.9</transparency>
          <geometry>
            <box>
              <size>2 2 0.1</size>
            </box>
          </geometry>
          <material>
            <ambient>0.2 0.2 0.2 1.0</ambient>
            <diffuse>.421 0.225 0.0 1.0</diffuse>
          </material>
        </visual>
      </link>
      <link name="sphere_1">
        <pose>0 0 0.93 0 0 0</pose>
        <collision name="collision">
          <geometry>
            <sphere>
              <radius>0.02</radius>
            </sphere>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <sphere>
              <radius>0.02</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>1.0 0 0 1.0</ambient>
            <diffuse>.421 0.225 0.0 1.0</diffuse>
          </material>
        </visual>
      </link>
      <joint name="sphere_1_joint" type="ball">
        <parent>roof</parent>
        <child>sphere_1</child>
      </joint>
      <!--<plugin name="model_push" filename="libmodel_push.so"/>-->
    </model> 

    <wind>
      <linear_velocity>0.1 0 0</linear_velocity>
    </wind>  
        
    <!-- Load the plugin for the wind -->
    <plugin name="model_push" filename="libmodel_push.so"/>
  </world>
</sdf>
